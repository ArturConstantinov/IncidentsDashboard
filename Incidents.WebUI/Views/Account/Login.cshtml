@using Incidents.Application.Incidents.Users.Queries.GetUserByUserName;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@model GetUserByUserNameVm;

<div class="text-center container-sm mt-4 pt-5 col-md-6">
    <form class="login-form bg-white" asp-asp-controller="Account" asp-action="Login" asp-antiforgery="true" method="post">
        <h1 class="mb-4">Incidents Dashboard</h1>
        <div class="row">
            <div class="col-3">
                <label asp-for="UserName" class="col-form-label text-right"></label>
            </div>
            <div class="col-8">
                <input asp-for="UserName" placeholder="User Name" class="form-control" autofocus />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-3">
                <label asp-for="UserName" class="col-form-label text-right"></label>
            </div>
            <div class="col-8">
                <input asp-for="Password" type="password" placeholder="Password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-primary btn-block mb-4">Log in</button>
    </form>
</div>