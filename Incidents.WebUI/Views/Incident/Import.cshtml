@{
    Layout = null;
}

@model ImportIncidentViewModel;

<div class="mb-5">
    <h4 class="display-5 text-center">Import Incident from CSV file</h4>

</div>
<div class="container col-md-8">

    <a onclick="goToIncidentsIndex()" class="btn btn-primary float-end" tabindex="-1" role="button" aria-disabled="true">Back</a>
    <br />
    <br />
    <form id="importForm" class="bg-white" role="form"
          asp-action="Import" asp-controller="Incident" asp-antiforgery="true" method="post">
        <div class="col-sm-12">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="File">File CSV</label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input type="file" asp-for="File" class="form-control form-control-sm">
                        <span id="FileError" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <div class="col-sm-12 d-flex justify-content-center">
        <button onclick="importCsvIncident()" class="btn btn-primary ml-auto">
            <span id="import-spinner" class="spinner-border spinner-border-sm" style="display: none;" role="status" aria-hidden="true"></span> Import
        </button>
    </div>
</div>

