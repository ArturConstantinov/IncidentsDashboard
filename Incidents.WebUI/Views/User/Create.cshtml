@using Incidents.Application.Incidents.Users.Commands.CreateUser;

@{
    Layout = null;
}
@model CreateUserDto;
<div class="container col-md-6">
    @if (ViewBag.Error != null)
    {
        @foreach (var error in ViewBag.Error)
        {
            <p class="text-danger">@error</p>
        }
    }
    <form class="bg-white" id="createUserForm" asp-controller="User" asp-action="Create" asp-antiforgery="true" method="post">
        <div class="row">
            <div class="col-3">
                <label class="form-label" asp-for="UserName">User Name</label>
            </div>
            <div class="col-8">
                <input class=" form-control" type="text" asp-for="UserName" />
                <span class="text-danger" asp-validation-for="UserName"></span>
                <br>
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <label class=" form-label">Password</label>
            </div>
            <div class="col-8">
                <input class=" form-control" type="text" asp-for="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
                <br>
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <label class=" form-label">Full Name</label>
            </div>
            <div class="col-8">
                <input class=" form-control" type="text" asp-for="FullName">
                <span class="text-danger" asp-validation-for="FullName"></span>
                <br>
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <label class=" form-label">Email</label>
            </div>
            <div class="col-8">
                <input class=" form-control" type="text" asp-for="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
                <br>
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <label class=" form-label">Role</label>
            </div>
            <div class="col-8">
                @foreach (var role in ViewBag.Roles)
                {
                    @if (1 == role.Id)
                    {
                        <div class="form-check form-switch d-flex justify-content-start">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" checked>
                            <label class="form-check-label" for="@role.Id">@role.Name</label>
                        </div>
                    }
                    else
                    {
                        <div class="form-check form-switch d-flex justify-content-start">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                            <label class="form-check-label" for="@role.Id">@role.Name</label>
                        </div>
                    }
                }
            </div>
            <span class="text-danger" asp-validation-for="RolesId"></span>
            <br>
        </div> 
    </form>
    <button onclick="createUser()" class="btn btn-lg btn-success btn-block mt-3">Create<i class="fas fa-sign-in-alt"></i></button>
</div>