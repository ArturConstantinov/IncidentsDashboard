@using Incidents.Application.Incidents.Users.Commands.CreateUser;

@{
    Layout = null;
}
@model CreateUserDto;

<h1 class="display-5">Create User</h1>
<div class="container col-md-8">
    @if (ViewBag.Error != null)
    {
        @foreach (var error in ViewBag.Error)
        {
            <p class="text-danger">@error</p>
        }
    }
    <a onclick="goToUserIndex()" class="btn btn-primary float-end" tabindex="-1" role="button" aria-disabled="true">Back</a>
    <br />
    <br />
    <form class="bg-white" id="createUserForm" asp-controller="User" 
    asp-action="CreateUsers" asp-antiforgery="true" method="post">
        <div class="col-sm-12">
            <div class="form-group row">
                <label asp-for="UserName" class="col-sm-3 col-form-label text-end"></label>
                <div class="col-sm-9">
                    <input asp-for="UserName" class="form-control form-control-sm" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-end" asp-for="Password"></label>
                <div class="col-9">
                    <input class="form-control form-control-sm" type="password" asp-for="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-end" asp-for="ConfirmPassword">Confirm Password</label>
                <div class="col-9">
                    <input class="form-control form-control-sm" type="password" asp-for="ConfirmPassword" />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-end" asp-for="FullName">Full Name</label>
                <div class="col-9">
                    <input class="form-control form-control-sm" type="text" asp-for="FullName">
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-end" asp-for="Email"></label>
                <div class="col-9">
                    <input class="form-control form-control-sm" type="text" asp-for="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-end" asp-for="RolesId">Role</label>
                <div class="col-9">
                    <select class="form-select form-select-sm" asp-for="RolesId">
                    @foreach (var role in ViewBag.Roles)
                    {
                        @if (1 == role.Id)
                        {
                            <option value="@role.Id" selected>@role.Name</option>
                        }
                        else
                        {
                            <option value="@role.Id">@role.Name</option>
                        }
                    }
                    </select>
                </div>
            </div>
            <br />
            <span class="text-danger" asp-validation-for="RolesId"></span>
        </div>
    </form>
    <div class="d-flex justify-content-end">
        <button onclick="createUser()" class="btn btn-primary">Create<i class="fas fa-sign-in-alt"></i></button>
    </div>
</div>