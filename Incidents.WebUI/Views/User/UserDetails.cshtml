@using Incidents.Application.Incidents.Queries.UserQueries.GetUserById;
@{
    Layout = null;
}
@model GetDetailsUserByIdVm;

<h1 class="display-5 text-center">User Details</h1>
<div class="container col-md-8">
    @if (ViewBag.Error != null)
    {
        @foreach (var error in ViewBag.Error)
        {
            <p class="text-danger">@error</p>
        }
    }
    <a onclick="goToUserIndex()" class="btn btn-primary float-end" tabindex="-1" role="button" aria-disabled="true">Back</a>
    <br />
    <br />
    
    <form class="bg-white" id="detailUserForm" asp-antiforgery="true">
        <div class="col-sm-12">
            <div class="form-group row">
                <label asp-for="UserName" class="col-sm-3 col-form-label text-end">User Name</label>
                <div class="col-sm-9">
                    <input asp-for="UserName" class="form-control form-control-sm" disabled/>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-end" asp-for="FullName">Full Name</label>
                <div class="col-9">
                    <input class="form-control form-control-sm" type="text" asp-for="FullName" disabled/>
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-end" asp-for="Email"></label>
                <div class="col-9">
                    <input class="form-control form-control-sm" type="text" asp-for="Email" disabled />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-end" asp-for="IsEnabled">Enabled</label>
                <div class="col-9">
                    <input class="form-control form-control-sm" type="text" asp-for="IsEnabled" disabled />
                    <span class="text-danger" asp-validation-for="IsEnabled"></span>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-end" asp-for="UserRoles">Role</label>
                <div class="col-9">
                    <input class="form-control form-control-sm" type="text" asp-for="UserRoles" value="@string.Join(", ", Model.UserRoles)" disabled />
                </div>
            </div>
            <span class="text-danger" asp-validation-for="UserRoles"></span>
        </div>
    </form>
</div>
