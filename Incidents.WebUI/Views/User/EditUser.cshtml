@using Incidents.Application.Incidents.Users.Commands.UpdateUser;
@{
    Layout = null;
}
@model UpdateUserDto;

<h1 class="display-5">Create User</h1>
<div class="container col-md-8">
    @if (ViewBag.Error != null)
    {
        @foreach (var error in ViewBag.Error)
        {
            <p class="text-danger">@error</p>
        }
    }
    <a onclick="goToUserIndex()" class="btn btn-primary float-end" tabindex="-1" role="button" aria-disabled="true">Back</a>
    <br />
    <br />
    @if (ViewBag.UserDetails != null)
    {
        <form class="bg-white" id="editUserForm" asp-controller="User" asp-action="EditUser" asp-route-userId="@ViewBag.UserId" asp-antiforgery="true" method="post">
            <div class="col-sm-12">
                <div class="form-group row">
                    <label asp-for="UserName" class="col-sm-3 col-form-label text-end"></label>
                    <div class="col-sm-9">
                        <input asp-for="UserName" class="form-control form-control-sm" value="@ViewBag.UserDetails.UserName" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label text-end" asp-for="Password"></label>
                    <div class="col-9">
                        <input class="form-control form-control-sm" type="password" asp-for="Password" disabled />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label text-end" asp-for="ConfirmPassword">Confirm Password</label>
                    <div class="col-9">
                        <input class="form-control form-control-sm" type="password" asp-for="ConfirmPassword" disabled />
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label text-end" asp-for="FullName">Full Name</label>
                    <div class="col-9">
                        <input class="form-control form-control-sm" type="text" asp-for="FullName" value="@ViewBag.UserDetails.FullName" />
                        <span class="text-danger" asp-validation-for="FullName"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label text-end" asp-for="Email"></label>
                    <div class="col-9">
                        <input class="form-control form-control-sm" type="text" asp-for="Email" value="@ViewBag.UserDetails.Email" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label text-end" asp-for="IsEnabled">Enabled</label>
                    <div class="col-9">
                        <select class="form-select form-select-sm" asp-for="IsEnabled">
                            @if (ViewBag.UserDetails.IsEnabled.ToString() == "True")
                            {
                                <option value="true" selected>True</option>
                                <option value="false">False</option>
                            }
                            else
                            {
                                <option value="true">True</option>
                                <option value="false" selected>False</option>
                            }
                        </select>
                        <span class="text-danger" asp-validation-for="IsEnabled"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label text-end" asp-for="RolesId">Role</label>
                    <div class="col-9">
                        <select class="form-select" asp-for="RolesId">
                            @foreach (var role in ViewBag.Roles)
                            {
                                if (ViewBag.UserDetails.UserRoles.Contains(role.Id))
                                {
                                    <option value="@role.Id" selected>@role.Name</option>
                                }
                                else
                                {
                                    <option value="@role.Id">@role.Name</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <span class="text-danger" asp-validation-for="RolesId"></span>
            </div>

            <div class="col-sm-12">
                <div class="form-group row">
                    <label class="col-sm-3 form-check-label text-end">Update Password</label>
                    <div class="col-8 form-check form-switch ms-3">
                        <input class="form-check-sm form-check-input" type="checkbox" id="updatePassword" onchange="updatePasswordSwitch()">
                    </div>
                </div>
            </div>
        </form>
        <button id="modifyUserSubmitForm" onclick="editUser(@ViewBag.UserId)" class="btn btn-lg btn-success btn-block mt-3">Edit<i class="fas fa-sign-in-alt"></i></button>
    }

</div>
